{
    "manifest_version": 2,
    "name": "DET-Chat",
    "version": "2.0.3",

    "description": "",
    "update_url": "http://app.kaetering.bplaced.com/chat/chromeapp/update.xml",
    
    "app": {
        "background": {
            "scripts": ["app/bgworker.js", "app/background.js"]
        }
    },
    
    "icons": {
        "16":  "icon/logo-16x16.png",
        "32":  "icon/logo-32x32.png",
        "48":  "icon/logo-48x48.png",
        "64":  "icon/logo-64x64.png",
        "96":  "icon/logo-96x96.png",
        "128": "icon/logo-128x128.png",
        "256": "icon/logo-256x256.png"
    },
    
    "offline_enabled": true,
    
    "permissions": [
        "clipboardRead",
        "clipboardWrite",
        "alwaysOnTopWindows",
        "alarms",
        "notifications",
        "storage"
    ]
}
